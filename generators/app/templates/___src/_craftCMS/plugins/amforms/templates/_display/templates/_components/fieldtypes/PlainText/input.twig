{% import 'forms' as forms %}

{% set config = {
    id: name,
    name: name,
    value: value,
    class: 'nicetext',
    maxlength: settings.maxLength,
    showCharsLeft: true,
    placeholder: settings.placeholder,
    rows: settings.initialRows,
    type: type is defined ? type : 'text'
} %}

{% if settings.multiline %}
    {{ forms.textarea(config) }}
{% else %}
    {{ forms.text(config) }}
{% endif %}
