<!-- Person-specific fields -->

                    <div id="Person" class="metaPane field">
                        <h2>{{ "Person Info" |t }}</h2>
                        <div class="field">
                            <div class="half-width-field half-width-field-left">
                            {{ forms.selectField({
                                label: "Person Gender"|t,
                                instructions: "The gender of the person" |t |raw,
                                id: 'personOwnerGender',
                                class: 'nicetext',
                                options: {
                                    "Male": "Male"|t,
