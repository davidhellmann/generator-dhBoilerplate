{% extends 'amforms/_layouts/settings' %}

{% set title = 'AntiSpam'|t %}

{% block fields %}
    {{ forms.lightswitchField({
        label: antispam.honeypotEnabled.name|t,
        id: antispam.honeypotEnabled.handle,
        name: antispam.honeypotEnabled.handle,
        on: antispam.honeypotEnabled.value,
        instructions: 'Add a hidden field to the forms that could be filled out by spambots.'|t,
        first: true
    }) }}
    {{ forms.textField({
        label: antispam.honeypotName.name|t,
        id: antispam.honeypotName.handle,
        name: antispam.honeypotName.handle,
        value: antispam.honeypotName.value,
        instructions: 'The name of the honeypot field.'|t
    }) }}
    <hr>
    {{ forms.lightswitchField({
        label: antispam.timeCheckEnabled.name|t,
        id: antispam.timeCheckEnabled.handle,
        name: antispam.timeCheckEnabled.handle,
        on: antispam.timeCheckEnabled.value,
        instructions: 'Check how long someone took to fill out a form.'|t
    }) }}
    {{ forms.textField({
        label: antispam.minimumTimeInSeconds.name|t,
        id: antispam.minimumTimeInSeconds.handle,
        name: antispam.minimumTimeInSeconds.handle,
        value: antispam.minimumTimeInSeconds.value,
        instructions: 'The minimum amount of seconds that is required to fill out a form.'|t
    }) }}
    <hr>
    {{ forms.lightswitchField({
        label: antispam.duplicateCheckEnabled.name|t,
        id: antispam.duplicateCheckEnabled.handle,
        name: antispam.duplicateCheckEnabled.handle,
        on: antispam.duplicateCheckEnabled.value,
        instructions: 'Check for duplications on submission.'|t
    }) }}
    <hr>
    {{ forms.lightswitchField({
        label: antispam.originCheckEnabled.name|t,
        id: antispam.originCheckEnabled.handle,
        name: antispam.originCheckEnabled.handle,
        on: antispam.originCheckEnabled.value,
        instructions: 'Check the domain and user agent.'|t
    }) }}
{% endblock %}
